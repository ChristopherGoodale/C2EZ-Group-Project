<div class="update-inventory-form flex flex-col">
    <div id="item_id" data-id="{{inventoryItem.id}}" class="update-inventory-business-name">{{inventoryItem.business.business_name}} Inventory </div>
    <div id="itemsDiv" class="flex">
        <div class="form login-form">
            <div class="form-group">
                <label for="item_name" class="item-name-label">NAME:</label>
                <input class="form-input" type="text" id="item_name" value="{{inventoryItem.item_name}}" />
            </div>
            <div class="form-group">
                <label for="item_description" class="item-description-label">DESCRIPTION:</label>
                <input class="form-input" type="text" id="item_description" value="{{inventoryItem.item_description}}" />
            </div>
            <div class="form-group">
                <label id="item_image" data-id="{{inventoryItem.item_image}}" for="item_image" class="item-image-label">IMAGE:</label>
                <button class="p-2 text-center bg-black text-white w-full" id="upload_widget">Upload Image</button>
            
            </div>
            <div class="form-group">
                <label for="item_price" class="item-price-label">PRICE:</label>
                <input class="form-input" type="number" id="item_price" value="{{inventoryItem.item_price}}"/>
            </div>
            <div class="form-group">
                <label for="quantity_instock" class="item-quantity-label">QUANTITY:</label>
                <input class="form-input" type="number" id="quantity_instock" value="{{inventoryItem.quantity_instock}}"/>
            </div>
            <div class="form-group mt-2 mb-2">
                <button class="p-2 text-center bg-black text-white w-full" id="updateBtn">Update Inventory</button>
            </div>
        </div> 
    </div>
</div>


<script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>  


  <script src="/js/inventoryItem.js"></script>
 


